{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "cowlick",
  "description": "Novel engine for Akashic",
  "scripts": {
    "prepare": "lerna bootstrap",
    "publish": "lerna publish",
    "test": "lerna run test",
    "build": "lerna run build",
    "prettier": "prettier --write '**/*.{js,ts}'",
    "sample:bundle": "cd packages/sample && npm run bundle",
    "sample:publish": "gh-pages -d ./packages/sample/dist -m \"Update $(date +%Y-%m-%d:%H:%M:%s)\"",
    "start": "cd packages/sample && npm start",
    "precommit": "lint-staged",
    "postcommit": "git reset"
  },
  "author": "pocketberserker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocketberserker/cowlick.git"
  },
  "devDependencies": {
    "gh-pages": "1.1.0",
    "husky": "0.14.3",
    "lerna": "2.5.1",
    "lint-staged": "5.0.0",
    "prettier": "1.8.2"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": false
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
