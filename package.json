{
  "private": true,
  "version": "1.0.0",
  "name": "cowlick",
  "description": "Novel engine for Akashic",
  "scripts": {
    "prepare": "lerna bootstrap",
    "publish": "lerna publish",
    "test": "lerna run test",
    "build": "lerna run build",
    "lint": "eslint --fix --ext .ts packages/**/src",
    "sample:bundle": "cd packages/sample && npm run bundle",
    "sample:publish": "gh-pages -d ./packages/sample/dist -m \"Update $(date +%Y-%m-%d:%H:%M:%s)\"",
    "start": "cd packages/sample && npm start"
  },
  "author": "pocketberserker",
  "license": "MIT",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "pocketberserker/cowlick.git"
  },
  "devDependencies": {
    "eslint": "4.7.1",
    "gh-pages": "1.0.0",
    "lerna": "2.4.0",
    "typescript": "2.5.3",
    "typescript-eslint-parser": "8.0.0"
  }
}
